{
    "name": "cryptr",
    "author": "Jacob Crowther <crowther@adobe.com>",
    "version": "0.4.0",
    "description": "A GUI for Vault",
    "main": "app/index.js",
    "repository": {
        "url": "https://github.com/jcrowthe/cryptr.git"
    },
    "license": "Apache-2.0",
    "scripts": {
        "postinstall": "install-app-deps",
        "start": "electron ./app",
        "dev": "cross-env CRYPTR_ENV='development' npm run start",
        "test": "./node_modules/mocha/bin/mocha",
        "dist": "electron-builder -mwl --x64"
    },
    "devDependencies": {
        "chai": "^3.5.0",
        "chai-as-promised": "^5.3.0",
        "cross-env": "^5.2.1",
        "electron": "^11.0.3",
        "electron-builder": "^22.3.2",
        "electron-prebuilt": "^1.4.13",
        "mocha": "^5.2.0"
    },
    "build": {
        "productName": "Cryptr",
        "copyright": "Copyright Â© 2019 Adobe. All rights reserved.",
        "appId": "io.cryptr",
        "mac": {
            "category": "public.app-category.productivity",
            "publish": [
                "github"
            ]
        },
        "win": {
            "icon": "https://github.com/jcrowthe/cryptr/blob/vault-integration/app/images/cryptr-internal.png",
            "publish": [
                "github"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "tar.gz"
            ]
        }
    }
}
